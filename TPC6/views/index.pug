extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Pessoas List #[a.w3-btn.w3-round.w3-grey(href="/alunos/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Name
          th Sexo
          th Actions
        
        each p in plist
          tr
            td
              a(href="/pessoa/"+p.id)= p.nome
            td= p.sexo
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoa/edit/"+p.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoa/delete/"+p.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
